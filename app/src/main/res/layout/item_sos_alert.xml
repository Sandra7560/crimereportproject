<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/item_background"
    android:layout_marginBottom="8dp"> <!-- Corrected the marginBottom to layout_marginBottom -->

    <!-- Emergency Message -->
    <TextView
        android:id="@+id/messageTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Emergency Message"
        android:textSize="16sp"
        android:textStyle="bold" />  <!-- Add space after message -->

    <!-- Location -->
    <TextView
        android:id="@+id/locationTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" /> <!-- Corrected layout_marginBottom -->

    <!-- Time -->
    <TextView
        android:id="@+id/timeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray" />

</LinearLayout>
